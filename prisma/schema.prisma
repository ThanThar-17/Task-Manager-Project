generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  name       String
  email      String   @unique
  password   String
  role       Role
  department String
  tasks      Task[]   @relation("EmployeeTasks")
}

model Task {
  id         Int      @id @default(autoincrement())
  title      String
  priority   String
  status     String   @default("PENDING")
  dueDate    DateTime
  department String
  createdAt  DateTime @default(now())
  employees  User[]   @relation("EmployeeTasks")
}

enum Role {
  ADMIN
  EMPLOYEE
}
